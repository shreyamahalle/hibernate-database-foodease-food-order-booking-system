<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.shreya.hibernate.model.Order" table="orderr">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="type" column="type" type="string"/>
        <property name="note" column="note" type="string"/>
        <property name="paymentMethod" column="payment_method" type="string"/>
        <property name="customerEmail" column="customer_email" type="string"/>
    </class>
</hibernate-mapping>
